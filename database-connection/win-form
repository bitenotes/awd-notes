        }

        protected void Button1_Click(object sender, EventArgs e)
        {
            con.Open();
            string q = "insert into student(rollno,sname,address) values('" + this.TextBox1.Text + "', '" + this.TextBox2.Text + "','" + this.TextBox3.Text + "')";
            SqlCommand cmd = new SqlCommand(q, con);
            cmd.ExecuteNonQuery();
           Label1.Text="DATA HAS BEEN SAVED..!!";
            con.Close();
        }
